<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AvalonClient.ViewModels"
             xmlns:pages="clr-namespace:AvalonClient.Views.Pages"
             x:Class="AvalonClient.App">

  <Application.Styles>
    <FluentTheme />
  </Application.Styles>

  <Application.DataTemplates>
    <DataTemplate DataType="{x:Type vm:LobbyViewModel}">
      <pages:LobbyPage/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:SetupViewModel}">
      <pages:SetupPage/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:OpponentDownViewModel}">
      <pages:OpponentDownPage/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:GameViewModel}">
      <pages:GamePage/>
    </DataTemplate>
  </Application.DataTemplates>

      


</Application>
