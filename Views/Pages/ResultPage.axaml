<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AvalonClient.ViewModels"
             x:Class="AvalonClient.Views.Pages.ResultPage"
             x:DataType="vm:ResultViewModel">

  <Border Padding="14" BorderThickness="1">
    <StackPanel Spacing="12" HorizontalAlignment="Center" VerticalAlignment="Center">

      <TextBlock FontSize="24"
                 FontWeight="Bold"
                 HorizontalAlignment="Center"
                 Text="{Binding Title}" />

      <TextBlock FontSize="16"
                 Opacity="0.9"
                 HorizontalAlignment="Center"
                 Text="{Binding Message}" />

      <Button Width="160"
              Content="LEAVE"
              Command="{Binding LeaveCommand}" />

    </StackPanel>
  </Border>
</UserControl>
