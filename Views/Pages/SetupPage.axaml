<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AvalonClient.ViewModels"
             x:Class="AvalonClient.Views.Pages.SetupPage"
             x:DataType="vm:SetupViewModel">

  <Border Padding="14" CornerRadius="10" BorderThickness="1">
    <StackPanel Spacing="10">

      <StackPanel Orientation="Horizontal" Spacing="12">
        <StackPanel>
          <TextBlock FontSize="20" Text="SETUP phase"/>
          <TextBlock Opacity="0.8" Text="{Binding RoomBadge}"/>
        </StackPanel>

        <Border Padding="8" CornerRadius="8" BorderThickness="1">
          <TextBlock Text="{Binding OpponentReadyText}"/>
        </Border>
      </StackPanel>

      <TextBlock Text="{Binding Status}" />

      <StackPanel Orientation="Horizontal" Spacing="10">
        <StackPanel>
          <TextBlock Text="Ship length" Opacity="0.8"/>
          <ComboBox ItemsSource="{Binding FleetLens}"
                    SelectedItem="{Binding SelectedLen}"
                    Width="120"/>
        </StackPanel>

        <StackPanel>
          <TextBlock Text="Direction" Opacity="0.8"/>
          <Button Content="{Binding DirText}" Command="{Binding ToggleDirCommand}" Width="120"/>
        </StackPanel>

        <Button Content="READY" Command="{Binding ReadyCommand}" IsEnabled="{Binding CanReady}" Width="120" />
        <Button Content="RESET" Command="{Binding ResetShipsCommand}" Width="120" />
        <Button Content="LEAVE" Command="{Binding LeaveCommand}" Width="120" />
      </StackPanel>

      <Border Padding="10" CornerRadius="8" BorderThickness="1">
        <StackPanel Spacing="6">
          <TextBlock Text="Your board (click = upper-left ship anchor)" Opacity="0.85"/>
          <UniformGrid x:Name="BoardGrid" Rows="10" Columns="10"/>
          <TextBlock Opacity="0.7" Text="Legend: . empty, S ship" />
        </StackPanel>
      </Border>

      <ItemsControl ItemsSource="{Binding SelfRows}">
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <TextBlock FontFamily="Consolas" Text="{Binding}" />
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>

    </StackPanel>
  </Border>
</UserControl>
