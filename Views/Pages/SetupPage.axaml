<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AvalonClient.ViewModels"
             x:Class="AvalonClient.Views.Pages.SetupPage"
             x:DataType="vm:SetupViewModel">

  <Border Padding="14" CornerRadius="10" BorderThickness="1">
    <StackPanel Spacing="10">

      <TextBlock FontSize="20" Text="SETUP phase"/>
      <TextBlock Opacity="0.8" Text="{Binding RoomBadge}"/>

      <TextBlock Text="{Binding Status}" />

      <Border Padding="10" CornerRadius="8" BorderThickness="1">
        <TextBlock Text="Ship placement UI goes here (next step)."/>
      </Border>

      <StackPanel Orientation="Horizontal" Spacing="8">
        <Button Content="LEAVE" Command="{Binding LeaveCommand}" />
      </StackPanel>

    </StackPanel>
  </Border>
</UserControl>
