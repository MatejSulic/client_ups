<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AvalonClient.ViewModels"
             x:Class="AvalonClient.Views.Pages.OpponentDownPage"
             x:DataType="vm:OpponentDownViewModel">

  <Border Padding="14" CornerRadius="10" BorderThickness="1">
    <StackPanel Spacing="10">

      <TextBlock FontSize="20" Text="{Binding Title}" />
      <TextBlock Opacity="0.85" Text="{Binding Status}" />

      <Border Padding="10" CornerRadius="8" BorderThickness="1">
        <StackPanel Spacing="6">
          <TextBlock FontSize="16" Text="â³ Connection paused" />
          <TextBlock Opacity="0.9" Text="{Binding TimeoutText}" />
        </StackPanel>
      </Border>

      <TextBlock Opacity="0.75"
                 Text="Tip: If this takes too long, the server may return you to lobby automatically." />

    </StackPanel>
  </Border>
</UserControl>
